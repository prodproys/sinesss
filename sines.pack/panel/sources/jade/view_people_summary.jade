.container.people_summary
    each block in blocks
        h3 #{block.nombre}
        .row-table
            table.table.table-bordered.table-sm
                thead
                    th 
                    each row in monthA
                        th(scope='col') #{row}
                tbody
                    each months,year in block.calendar
                        tr
                            td #{year}
                            each status in months
                                td: span.status(Class="status #{status}")
        ul.leyenda
            li #[span.status.payed] #[span Pago registrado]
            li #[span.status.debt] #[span Deuda registrada]
            li #[span.status.empty] #[span Sin registro]



