.controls-rows
    .sub-controls
        each control in controls
            != control
.table-responsive
    table(Class="#{tabla_class} table table-bordered table-sm table-striped")
        thead
            each row in headers
                tr
                    each cell,cellindex in row
                        th(
                            Class=" #{cellindex}",
                            scope='col',
                            colspan="#{cell.colspan}",
                            rowspan="#{cell.rowspan}"
                            ) #{cell.text}
        tbody
            each row in items
                tr
                    each cell,cellindex in row
                        td(Class="#{cellindex}") 
                            if cell.url
                                a(href="#{cell.url}") #{cell.text}
                            else
                                span #{cell.text}
        tfoot
            each row in footers
                tr
                    each cell,cellindex in row
                        th(
                            Class=" #{cellindex}",
                            scope='col',
                            colspan="#{cell.colspan}",
                            rowspan="#{cell.rowspan}"
                            ) #{cell.text}