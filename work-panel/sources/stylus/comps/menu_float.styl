.li_cabecera
    > li 
        > a
            display flex !important 
            justify-content space-between
            &:after
                font-family fontawesome		
                margin-left 2em
        &.link_dark_mode > a:after
            content "\f186"
        &.link_light_mode > a:after
            content "\f185"
        &.link_logout > a:after
            content "\f2f5"
        &.form_user_change_password > a:after
            content "\f13e"
        &.form_user_edit > a:after
            content "\f2bd"
    
.menudown
    padding 0em 1em .2em
    background transparent
    > .menu_icono
        display flex
        align-items center
        &:after
            font-family 'fontawesome'
            content "\f0c9"
            font-size 1.5em
    > .menu_user
        display flex
        align-items center        
        &:before
            font-family 'fontawesome'
            margin-right .7em
            content "\f508"            
    > .menu_icono_delgado
        display flex
        align-items center
        &:after
            font-family 'fontawesome'
            content "\f142"
            font-size 1.5em
            // transform: scaleX(.2);
    position relative
    // overflow hidden
    > a
        display inline
        z-index 1
        // background white
        padding 0
        margin 0
        // background white
        // color component_color
    .li_cabecera
        // padding-top 1em
        // padding-bottom 1em
        // margin-top 1.2em
        // margin-bottom 1.2em
        padding-top 1.5em
        padding-bottom 1.5em
        border-radius 10px
        background-color white
        z-index 14
        position absolute
        right 1px
        // background white
        box-shadow 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
        // top -400px
        max-height 400px
        overflow hidden
        overflow-y auto
        display flex
        flex-direction column
        width 0px
        // top 19px
        // width auto
        border-style solid
        border-width 0
        border-color #aaa !important
        transition width 1s,top 1s
        padding-left 0
        .menu_limiter
            // margin 10px 0
            border-bottom 1px solid #aaa
            margin-top .4em
            margin-bottom .1em
        a
            min-width 130px
            display block
            text-align left
            padding 7px 20px
            float none
            white-space nowrap
            border-bottom 0px solid #ccc
            color component_link_color !important
            &:hover
                text-decoration none
            // text-transform capitalize
        span
            color component_color !important            
        > li, > a
            &:hover
                background-color rgba(225,236,237,0.5)
                text-decoration none
        > li:last-child > .menu_limiter
            display none
            border-bottom 0 !important

    &:hover
        // background lightgreen
        overflow visible
        > a
            color color_2
        .li_cabecera
            top 19px
            width auto
            border-width 1px
