
#modal-calendar
    border-radius 5px
    z-index 24
    left 0px
    // top 0px
    display inline-block
    background white
    // font-family Roboto
    overflow hidden
    position absolute
    width 100%
    box-shadow 0 1px 3px rgba(black,.12), 0px 1px 2px rgba(black,.24)
    header 
        background-color #fff
        padding 5px 15px
        text-align: center
        color: #000
        border-top 1px solid #ccc
        border-bottom 1px solid #ccc
    table
        border-spacing 0
        font-size .8em
        text-align: center
        width 100%
        background white
    thead
        background-color: #fff
        color #000
        font-weight bold
        text-transform uppercase
    td
        padding: 2px
    tr td 
        border solid 1px #f5f5f5
        a
            cursor pointer
            // font-weight bold
            font-size 14px
            color navy
    a.calendar-control 
        display inline-block
        width 50%
        border none 
        outline none 
        // font-weight bold
        // text-transform uppercase
        // background-color: #000
        // color navy
        cursor pointer
        padding 6px
        text-align center
        color navy
        &:hover
            color: #db3b61
