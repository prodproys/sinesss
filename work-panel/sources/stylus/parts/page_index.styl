

#div_allcontent
	width 100%
	max-width MAX_WIDTH
	text-align left
	position relative
	margin-top 0px
	// overflow hidden
	border-radius 8px
	padding 0px 0.5%
	border-radius 8px
	box-sizing border-box
	margin-left auto
	margin-right auto
	

.main_content_con_grid
	display grid
	grid-template-columns 200px 250px 1fr
	grid-template-rows 80px 1fr
	.logo_panel,a.link_header,.menus
		display flex
		flex-direction column
		height HEADER_HEIGHT
		justify-content center		

.div_bloque_cuerpo
	// border 1px solid green
	min-height calc(100vh - var(--header_height) - 32px)
	align-self flex-start
.link_header,.i_mmm 
	// align-self flex-start
	align-self center


.main_content
	align-content flex-start
	justify-content flex-start
	// align-items flex-start
	// align-items stretch


.main_content
	display flex
	flex-wrap wrap
	overflow-x hidden
	// align-content stretch
	margin 0 10px
	flex-grow 3
	// height 100%
	// min-height 100vh
	// justify-content flex-start
	// align-items stretch
	.logo_panel,
	a.link_header,
	.i_mmm
		width 30px
	.logo_panel
		display flex
		flex-direction column
		justify-content center		
		flex-grow 0
		width 200px
		height HEADER_HEIGHT
		img 
			width auto
			margin auto
	.link_header
		display flex
		flex-direction column
		justify-content center		
		flex-grow 2
		width 250px
		width "calc(100% - %s )" % MENU_WIDTH
		margin-left MARGIN_MENU	
		// background-color green
	.menus
		// width calc( 100% - 480px )
		width 100%
		// background-color #ccc
		margin-bottom -23px
		// padding 10px 0
		// flex-grow 1
		// height HEADER_HEIGHT
	.menu_content
		width MENU_WIDTH
		transition width 0.5s linear
		overflow hidden
		.ul_menus
			width MENU_WIDTH - MARGIN_MENU
	.div_bloque_cuerpo
		flex-grow 1
		margin-left 0px
		width "calc(100% - %s )" % MENU_WIDTH
		// width calc(100% - 200px)

@media $large
	.menu_colapsed
		.main_content
			.menu_content
				opacity 0
				width 0.1px
				transition width 0.5s linear,opacity 0.5s linear
			.div_bloque_cuerpo
				transition width 0.5s linear
				width calc( 100% - 2px )


