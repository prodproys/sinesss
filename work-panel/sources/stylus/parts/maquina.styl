// maquina
.tbl
	margin-left 2px
	border 1px solid #999
	background-color #FFF
	tr
		td
			text-align center
			border-right 1px dotted #888
			padding 1px 0px 0px
			border-bottom 1px dotted #ddd
			border-top 1px solid #FFF
			vertical-align top
			line-height 14px
			input
				background none repeat scroll 0 0 #F4F336
				border 1px solid #999999
				float left
				margin -1px
				max-width 86px
				width 100%  
			&.big,
			&.small
				text-align left  
			&.cntrl
				min-width 260px
				word-wrap break-word
			&.big
				max-width 140px
				word-wrap break-word
			&.sinplu
				width 70px
				max-width 70px
				word-wrap break-word
			&.big b a
				font-weight bold
				font-size 10px
			&.small b a
				font-size 10px
				color #000                  
		&.bgpar td
			background #F1F1F1

		&.bordegrupo td
			border-top 1px solid navy
			padding-top 5px


.tbl 
	td b span
		font-weight normal
		color #F83F07
	th
		background-color #F2F2F2
		border-right 1px solid #333333
		border-top 0 none
		color #040404
		font-size 10px
		font-weight normal
		line-height 90%
		padding 1px 2px
		text-align center
		text-transform uppercase
	td    
		a.letra
			float left
			font-weight weight
			height auto
			margin-left 0px
			margin-right 0px
			margin-top 1px
			overflow hidden
			text-decoration none
			width auto
			text-transform uppercase
			line-height 12px
			padding 0 0px
			outline 1px solid #FFF
		a img
			height 12px
			margin 0 0 -3px
		a.onon
			background #CCF7C5
			color #0D0000
		a.offoff
			background #F8927D
			color black
		span.creado,
		a.creado
			color #009900
		span.nocreado
			color #990000
	.grup
		opacity 1 !important
	tr.disabled td.big b a
		color #666
		font-size 10px

	tr.disabled td
		opacity 0.3

	tr.painton td
		opacity 1
		border-top 1px solid #000
		border-bottom 1px solid #000

	tr.disabled td.big
		opacity 1










