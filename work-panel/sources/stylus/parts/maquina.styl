.config_table
	font-size 1em
	margin 0px 0px 2px 0px
	float left
	max-width 500px
	th
		font-weight normal
		padding-top 1px
		padding-left 1px
		color #FFF
		text-align left
		background #333

	td
		padding 0 0 0 0px
		text-align left
		border-bottom 1px dotted #CCCCCC
		font-size 11px

	td.name
		font-weight bold
		word-break break-all

	td.value
		width 10%
		padding-left 0px

	td.value input,
	td.value select
		background-color #FF9

	td.value li
		list-style none
		border 1px solid #FFFFFF
		cursor default

	td.value li:hover
		background-color #EEEEEE
		border 1px solid #CCD6D6

	td input
		border 1px solid #CCD6D6
		padding 0px
		margin -1px 0px
		background-color #FFFFCC

















table.paginac
	margin-top 5px
	margin-bottom 5px

	td
		font-weight bold
		border-bottom 1px dotted #ccc
		color #777

	td a
		margin-left 5px
		color blue
		text-decoration none
		font-weight normal

	td a:hover
		text-decoration underline

table.photos
	background-color #eee
	border-collapse separate
	width 100%

	td
		border-bottom 1px solid #999
		border-left 1px solid #999
		font-size 11px
		font-weight bold
		height 30px
		position relative
		margin 1px
		text-align center
		vertical-align middle

	td b
		font-size 10px
		font-weight normal
		font-style italic

	td.phead
		font-weight bold
		font-size 12px
		color #000
		text-transform uppercase
		border-top 1px solid #999

	td img
		width 30px




