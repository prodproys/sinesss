

@media $small-medium
    body
    	user-select none
    // .logo_panel
    //     background green
    .link_header
        // background red
        font-size 0px
        color transparent
        // display none !important
        // visibility hidden !important
    .menu_colapsed_mobile
        .main_content
            .menu_content
                opacity 0
                width 0.1px
                transition width 0.5s linear,opacity 0.5s linear
            .div_bloque_cuerdpo
                transition width 0.5s linear
                width calc( 100% - 2px )
    .main_content 
        display flex
        flex-direction row
        justify-content center
        .menu_content
            text-align center
            top HEADER_HEIGHT
            position fixed
            // left 2%
            z-index 5
            // min-width 70%
            width 90%
            // max-width 90vw
            font-size 1.3em
            box-shadow 5px 5px 20px rgba(black,.3)
            // border 1px solid #666
            border-color transparent
            max-height calc(100vh - var(--header_height) - 10px)
            overflow auto
            .ul_menus
                width 100%
        .link_header
            width 1px
            flex-grow 0
        .logo_panel
            flex-grow 1
    // #control_filters
    //     display none
    #barra_paginacion
        flex-wrap wrap
        // flex-direction column
        #inner_span_num
            width 100% 
            font-size 1.3em
            margin-bottom 10px
            // text-align left 
    #ordenable .bl .bd
        font-size 1.2em
    .bloque_titulo 
        padding-top .4em
        padding-bottom .4em
        
        .titulo
            // font-size .7em
            .type_file
                // display block
                font-size .7em !important
                &.type-main
                    font-size 1.2em !important
                &:last-child
                    font-size 1.4em !important
    .menudown 
        .li_cabecera
            > li > a
                font-size 14px
                &:before
                    font-size 1em !important
    .detail
        
        .bl 
            font-size 1.1em
            // border 1px solid transparent !important
            padding-right 1em
            padding-left 1em
            .ldd
                width 100%
            .bld .nc
                width 45% !important
                min-width 45% !important
    .filters
        .byother
            width 100%
        select
            width 48% !important
            max-width @width
        // min-width 80%
    #cover
        position absolute
        width 100%
        height 100%
        top 0
        left 0
        opacity 70%
        background black
        z-index 4
        display none
    body.monitor:not(.menu_colapsed_mobile)
        #cover
            display block
    .titulo_formulario
        text-align center
    .formulario
        // border 1px solid yellow
        .groups
            // border 1px solid green
            display flex
            flex-direction column 
            padding 10px 0px
        .linea_form
            // border 1px solid red
            display flex
            flex-direction column
            // justify-content flex-start
            align-items flex-start
            margin-bottom 1em
            label
                width 100% !important
                // padding-left 2px
                // font-size 1.1em
                // margin-bottom 2px
            .form_input
                width 100% !important
                min-width initial
                box-sizing border-box
                // color white !important
                // padding 15px .5em
                // height 2.5em
                // font-size 1.3em
            &.input_bit
                display flex
                flex-direction row
                align-items center
                // align-content center
                > .form_input
                    order -1
                    width auto !important
                    input[type=checkbox]
                        margin 0 .5em 0 2px
                        height 100%
                        transform scale(1.1)
                > label
                    flex-grow 2
            &.linea_botones
                // border 1px solid red
                display flex
                flex-direction row
                justify-content space-evenly
                label
                    display none
            .floatinput 
                width 100%
        .btn
            font-size 1.3em
            padding .5em 2em
            text-transform uppercase
    .boton_crear_open,.boton_crear_close,#boton_excel
        color transparent !important
        font-size 0px
        margin-left .6rem !important
        &:before
            margin-right 0 !important