.detail
    #ordenable > li 
        padding-left 0 !important
    .marco
        padding 20px 0 30px 0
        border-bottom 1px solid #ddd
        border-radius 6px
        box-shadow 0 1px 2px rgba(0,0,0,0.4)
        border 1px solid #f6f6f5
        min-height 116px
        margin-bottom 20px
        .ficha_datos.wide
            display block
            width 100%
            // display flex
            // flex-direction row   
            vertical-align top             
        .ficha_datos.half
            display inline-block
            width 50%
            vertical-align top
        .linea
            margin-bottom 4px      
        .var
            color: #cf6a27 !important
            text-transform: uppercase;
            font-weight: bold;
            font-size: 1em;
            overflow: hidden;
            font-style: normal;
            word-wrap: break-word;
            padding-left: 6px;
            display inline-block
            width 120px
            &.dark
                color black !important
            &.navy
                color navy !important                
        .val
            // font-weight: bold;
            font-size: 1.1em;
        .paren
            color red
        ul.listas
            border 1px solid #eee
            width auto
            display inline-block
            margin-left 20px
            li
                border-bottom 1px solid #eee
                padding 0 1em
                color #000
            &.estados li
                color #777
                &.selected
                    color #000
                    font-weight bold
        .linea_bar
            margin 0px 10px 10px 10px
            min-height 10px
            border-bottom 1px solid #ccc
        .actividades
            padding 1em 0
            h4
                font-size 1.4em
                color black !important
                margin-left 10px
            .ficha_datos.half.datos .var
                padding-left 30px
                width 90px
        
